let rec find_first_repeat list =
  match list with
  | [] | [_] ->
    (* only zero or one elements, so no repeats *)
    None
  | x :: y :: tl ->
    if x = y then Some x else find_first_repeat (y::tl)
;;
[%%expect ocaml {|val find_first_repeat : 'a list -> 'a option = <fun>|}];;
